<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.xing.androidlearning.customtablayout.CustomTabLayout2
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue_light"
        app:indicatorPadding="18dp"
        app:redDotBgResId="@drawable/round_rect_red_10"
        app:redDotMarginRight="2dp"
        app:redDotMarginTop="2dp"
        app:smallDotBgResId="@drawable/round_rect_red_10" />
    <!--app:indicatorImg="@drawable/title_tab_indicator"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blacktxt" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>