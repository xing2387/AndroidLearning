<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xing.androidlearning.ContactsListFragment">

    <ListView
        android:id="@+id/ch_lv_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/ch_sidescollbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ch_sidescollbar"
        android:layout_toLeftOf="@+id/ch_sidescollbar"
        android:layout_toStartOf="@+id/ch_sidescollbar" />

    <com.example.xing.androidlearning.view.SideScollBar
        android:id="@+id/ch_sidescollbar"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        app:textSize="13" />

    <TextView
        android:id="@+id/ch_tv_indicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_sidebar_indicator"
        android:gravity="center"
        android:text="hi"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

</RelativeLayout>
