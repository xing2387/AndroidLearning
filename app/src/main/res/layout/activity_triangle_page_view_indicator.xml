<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pageviewindicator.PageViewIndicatorActivity">

    <com.example.xing.androidlearning.view.TriangleIndicator
        android:id="@+id/tpvi_triangleindicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkgray"
        app:tab_title_text_color="#CCCCCC"
        app:tab_title_text_color_highlight="#EEEEEE"
        app:tab_title_text_size="16sp"
        app:visible_tab_count="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="zTab1"
            android:textColor="#CCCCCC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="zTab2"
