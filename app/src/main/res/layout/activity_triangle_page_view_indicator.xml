            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="zTab4"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="zTab5"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="zTab6"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:textSize="20sp"
