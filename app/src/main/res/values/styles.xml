<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="base_color">
        <item name="android:background">#50d2c2</item>
    </style>


    <style name="EZTalksTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <!--<item name="android:paddingLeft">16dp</item>-->
        <!--<item name="android:paddingRight">16dp</item>-->
        <item name="android:background">#00aeff</item>
    </style>

    <style name="EZTalksTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/EZTalksLTextSize</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <style name="TitleAdd">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/whitetxt</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/contacts_add</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="bottom_bar_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">26dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_halftrans_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
</resources>
